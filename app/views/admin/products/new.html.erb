<div class="mt-3 ms-5">
  <%= link_to "<<", admin_products_path, class: 'link-style' %>
</div>

<h3 class="mt-3 ms-5">Crea un Producto</h3>

<%= form_with(model: [:admin, @admin_product]) do |form| %>
  <% if @admin_product.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admin_product.errors.count, "error") %> prohibited this admin_product from being saved:</h2>

      <ul>
        <% @admin_product.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="border border-danger rounded mx-5 py-5 px-5">

    <div class="mb-3">
      <%= form.label :name, class: "form-label" %>
      <%= form.text_field :name, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= form.label "Description", class: "form-label" %>
      <%= form.text_area :description, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= form.label "Price:", class: "form-label" %>
      <%= form.number_field :price, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Imagenes:", class: "form-label" %></b><br />
      <%= form.file_field :images, multiple: true, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= form.label "Active (?):", class: "form-label" %>
      <%= form.check_box :active %>
    </div>

    <div class="d-flex flex-row justify-content-end mt-3">
      <%= form.submit "Crea este Producto", class: 'btn btn-outline-primary py-0' %>
    </div>

  </div>
<% end %>
