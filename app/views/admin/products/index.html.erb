<p style="color: green" class="ms-5"><%= notice %></p>

<div class="d-flex flex-row justify-content-between my-3 me-5">
  <h3 class="ms-5">Productos</h3>
  <div>
    <%= link_to "Crea Un Producto", new_admin_product_path, class: "btn btn-outline-primary py-0" %>
  </div>
</div>

<div id="admin_products">
  <div class="mb-3 mx-5">
    <table class="table">
      <thead>
        <tr>
          <th scope="col">Imagen</th>
          <th scope="col">Nombre</th>
          <th scope="col">Descripcion</th>
          <th scope="col">Precio</th>
          <th scope="col">Activo(?)</th>
        </tr>
      </thead>
      <tbody>
        <% @admin_products.each do |p| %>
          <tr>
            <td>
              <% if p.images.attached? %>
                <%= image_tag(p.images.first, height: "50") %>
              <% else %>
                <%= image_tag("https://via.placeholder.com/50") %>
              <% end %>
            </td>
            <td><%= link_to p.name, admin_product_path(p.id), class: 'link-style' %></td>
            <td><%= p.description %></td>
            <td><span>$ <%= (p.price/100.0).to_s %></span></td>
            <td>
              <% if p.active %>
                <%= check_box_tag 'product_active', '1', true, disabled: true %>
              <% else %>
                <%= check_box_tag 'product_active', '0', false, disabled: true %>
              <% end %>
            </td>
          </tr>

        <% end %>
      </tbody>
    </table>
  </div>
</div>

