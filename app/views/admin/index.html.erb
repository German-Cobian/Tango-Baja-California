<h2 class="text-danger mt-3 mb-3">Tango Baja California</h2>

<% @schools.each do |school| %>

  <div class="d-flex flex-row justify-content-end me-5 mb-3">
    <%= link_to "Edita esta Informacion", edit_admin_school_path(school), class: 'link-style' %>
  </div>

  <div class="d-flex flex-wrap align-items-center">
    <div class="about mb-3">
      <%= school.description %>
    </div>

    <video height="500" width="600" controls>
      <source src="<%= asset_path('tango-video.mp4') %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>

  <div class="d-flex flex-wrap align-items-center me-5">
    <div class="w-50">
      <p class="text-danger">Jose Vega</p>
      <%= school.bio_jose %>
    </div>
    <div class="w-50">
      <p class="text-danger">Cristina Michaus Martinez<p>
      <%= school.bio_cris %>
    </div>
  </div>

  <div class="d-flex flex-row justify-content-end my-5 me-5">
    <div class="d-flex flex-row">
      <%= image_tag "phone.png", height: "20", width: "20", class: 'rounded me-2', alt: "Telephone" %>
      <p class="txt-phone text-white"><small><%= school.phone %></small><p>
    </div>
  </div>

  
<% end %>
