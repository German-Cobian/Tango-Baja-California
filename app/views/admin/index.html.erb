<h2 class="text-danger mt-3 mb-3">Tango Baja California</h2>

<% @schools.each do |school| %>

  <div class="d-flex flex-row justify-content-end me-5 mb-3">
    <%= link_to "Edita esta Informacion", edit_admin_school_path(school), class: 'link-style' %>
  </div>

  <div class="d-flex flex-wrap">
    <div class="about mb-5 me-5">
      <%= school.description %>
    </div>

    <video height="500" width="600" controls>
      <source src="<%= asset_path('tango-video.mp4') %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>

  <div class="d-flex flex-row justify-content-end mt-2 me-5">
    <div class="d-flex flex-row">
      <%= image_tag "phone.png", height: "20", width: "20", class: 'rounded me-2', alt: "Telephone" %>
      <p class="txt-phone text-white"><small><%= school.phone %></small><p>
    </div>
  </div>

<% end %>

<div class="d-flex flex-wrap mt-2">
  <% admins = Admin.all %>
  <% admins.each do |admin| %>
      <div class="bio border border-danger rounded mb-3 me-3 py-3 px-3">
        <div class="d-flex flex-row justify-content-center">
          <% if admin.avatar.attached? %>
            <%= image_tag admin.avatar, height: 150, class: ""  %>
          <% end %>
        </div>
        <div class="d-flex flex-column">
          <p class="text-danger mt-3"><%= admin.name %></p>
          <%= admin.bio %>
          <% if admin == current_admin %>
            <%= link_to "Edita esta informacion", edit_admin_profile_path(admin.id), class: 'link-style mt-3' %>
          <% end %>
        </div>
      </div>
  <% end %>
</div>
