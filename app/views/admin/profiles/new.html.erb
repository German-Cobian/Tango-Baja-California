<div class="mt-3 ms-5">
  <%= link_to "<<", admin_root_path, class: 'link-style' %>
</div>

<h2 class="mt-3 ms-5">Fija la Informacion de tu Perfil</h2>
  
<div class="col-6 border boder-danger rounded mb-5 my-5">

  <%= form_with model: current_admin, local: true, url: admin_profile_path(current_admin) do |form| %>
    
    <div class="mx-5 my-3">
      <b class="pe-4"><%= form.label "Nombre:", class: "form-label" %></b>
      <%= form.text_field :name, class: "form-control form-control-sm" %>
    </div>

    <div class="mx-5 my-3">
      <b class="pe-4"><%= form.label "Perfil:", class: "form-label" %></b>
      <%= form.text_area :bio, size: "100x4", class: "form-control form-control-sm" %>
    </div>

    <div class="mx-5 my-3">
      <b class="pe-4"><%= form.label "Fotografia:", class: "form-label" %></b>
      <%= form.file_field :avatar, class: "form-control form-control-sm" %>
    </div>
    
    
    <div class="d-flex flex-row justify-content-end my-5 me-5">
      <%= form.submit "Fija esta Informacion", class: "btn btn-outline-primary rounded-pill py-0" %>
    </div>
    
  <% end %>

</div>
