<p style="color: green" class="ms-5"><%= notice %></p>

<div class="border border-danger rounded my-3 mx-5 py-3 px-5">

  <div class="d-flex flex-row justify-content-between mb-5">
    <div class="me-5">
      <%= link_to "<<", admin_articles_path, class: 'link-style' %>
    </div>
    <div class="d-flex flex-row">
      <%= link_to "Edita esta Publicacion", edit_admin_article_path(@admin_article), class: 'link-style me-3' %> |
      <%= button_to "Elimina esta Publicacion", admin_article_path(@admin_article.id), method: :delete, class: 'btn btn-outline-danger py-0 ms-3' %>
    </div>
  </div>

  <div class="mb-5">

    <div class="d-flex flex-column align-items-center mb-3">
      <p class="row mb-3">
        <strong><%= @admin_article.title %></strong>
      </p>
      <div class="row">
        <% if @admin_article.images.any? %>
          <div class="d-flex flex-wrap mb-3">
            <% @admin_article.images.each do |image| %>
              <%= image_tag(image, height: 150, class: "rounded me-2 mb-2") %>
            <% end %>
          </div>
        <% end %>
      </div>
    </div>

    <p>
      <%= @admin_article.text %>
    </p>

  </div>

</div>

