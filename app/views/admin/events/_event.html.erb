<div id="<%= dom_id event %>">
  <p>
    <strong><%= event.title %></strong>
  </p>

  <p>
    <%= event.description %>
  </p>

  <p>
    <strong>Hospiciado por:</strong>
    <%= event.hosted_by %>
  </p>

  <div class="d-flex flex-row">
    <%= image_tag "calendar.png", height:"20", width: "20", class: "mt-1 me-3" %>
    <p class="me-3"><%= event.start_time %></p> |
    <p class="ms-3"><%= event.start_time %></p>
  </div>

  <div class="d-flex flex-row">
    <%= image_tag "location.png", height:"20", width: "20", class: "mt-1 me-3" %>
    <p><%= event.place %></p>
  </div>

</div>
