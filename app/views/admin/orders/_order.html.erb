<div id="<%= dom_id order %>">

  <p><strong>Cliente:</strong></p>

  <div class="border border-danger rounded py-3 px-3">
    <p>
      <strong class="me-3">Nombre:</strong>
      <%= order.customer_name %>
    </p>

    <p>
      <strong class="me-3">Email:</strong>
      <%= order.customer_email %>
    </p>

    <p>
      <strong class="me-3">Direccion:</strong>
      <%= order.customer_address %>
    </p>
  </div>

  <div class="mt-3">
    <% if order.order_products.any? %>
      <strong>Detalles:</strong>
        <div class="mt-3">
          <table class="table">
            <thead>
              <tr>
                <th scope="col">Articulo</th>
                <th scope="col">Cantidad</th>
              </tr>
            </thead>
            <tbody>
              <% order.order_products.each do |op| %>
                <tr>
                  <td><%= op.product.name %></td>
                  <td><%= op.quantity %></td>
                </tr>
              <% end %>
            </tbody>
          </table>
        </div>
    <% end %>
  </div>

  <div class="d-flex flex-row justify-content-between mt-5">
    <p>
      <strong>Total:</strong> $<%= (order.total/100.0).to_s %>
    </p>

    <p>
      <strong>Procesada (?):</strong>
      <%= order.fulfilled %>
    </p>
  </div>

</div>
