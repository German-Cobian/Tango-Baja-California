<div class="mt-3 ms-5">
  <%= link_to "<<", admin_orders_path, class: 'link-style' %>
</div>

<h1 class="mt-3 ms-5">New order</h1>

<%= form_with(model: [:admin, @admin_order]) do |form| %>
  <% if @admin_order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admin_order.errors.count, "error") %> ha impedido que esta orden se guarde:</h2>

      <ul>
        <% @admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="border border-danger rounded mx-5 py-5 px-5">

    <div class="mb-3">
      <%= form.label "Email del Cliente:", class: "form-label" %>
      <%= form.text_field :customer_email, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= form.label "Direccion del Cliente:", class: "form-label" %>
      <%= form.text_field :customer_address, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= form.label "Total:", class: "form-label" %>
      <%= form.number_field :total, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <%= form.label "Procesada (?):", class: "form-label" %>
      <%= form.check_box :fulfilled %>
    </div>

    <div class="d-flex flex-row justify-content-end">
      <%= form.submit "Crea esta Orden", class: "btn btn-outline-primary py-0" %>
    </div>

  </div>
<% end %>

