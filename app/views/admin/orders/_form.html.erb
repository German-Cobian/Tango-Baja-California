<%= form_with(model: [:admin, @admin_order]) do |form| %>
  <% if @admin_order.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(@admin_order.errors.count, "error") %> ha impedido que esta orden se guarde:</h2>

      <ul>
        <% @admin_order.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :customer_email, style: "display: block" %>
    <%= form.text_field :customer_email %>
  </div>

  <div>
    <%= form.label :customer_address, style: "display: block" %>
    <%= form.text_field :customer_address %>
  </div>

  <div>
    <%= form.label :total, style: "display: block" %>
    <%= form.number_field :total %>
  </div>

  <div>
    <%= form.label :fulfilled, style: "display: block" %>
    <%= form.check_box :fulfilled %>
  </div>

  <div>
    <%= form.submit %>
  </div>
<% end %>
