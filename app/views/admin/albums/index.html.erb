<%= stylesheet_link_tag 'admin_albums' %>

<div class="d-flex flex-row justify-content-between mt-3 mx-5">
  <h3>Galerias</h3>
  <div>
    <%= link_to "Crea Un Album", new_admin_album_path, class: "btn btn-outline-primary py-0" %>
  </div>
</div>

<div class="my-5 mx-5">
  <div class="d-flex flex-wrap justify-content-between" >
    <% @admin_albums.each do |album| %>
      <div class="album-container d-flex flex-column align-items-center border border-dark rounded mt-3 me-3 px-3">
        <div>
          <h6 class="mt-3"><%= link_to album.topic, admin_album_path(album.id) %></h6>
        </div>
        <div class="my-3 mx-2">
          <small><%= truncate album.description, length: 100 %></small>
        </div>
      </div>
    <% end %>
  </div>
</div>