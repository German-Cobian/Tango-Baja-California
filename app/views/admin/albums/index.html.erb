<%= stylesheet_link_tag 'admin_albums' %>

<div class="d-flex flex-row justify-content-between mt-3 mx-5">
  <h3>Galerias</h3>
  <div>
    <%= link_to "Crea Un Album", new_admin_album_path, class: "btn btn-outline-primary py-0" %>
  </div>
</div>

<div class="my-5 mx-5">
  <div class="d-flex flex-wrap justify-content-between" >
    <% @admin_albums.each do |album| %>
      <div class="album-container border border-danger rounded mt-3 me-3 py-4 px-3">
          <div>
            <h6 class="mt-3"><%= album.topic %></h6>
          </div>
          <div class="my-3 mx-2">
            <small><%= truncate album.description, lenght: 100 %></small>
          </div>
        <div class="d-flex flex-row justify-content-end">
          <%= link_to "Mas", admin_album_path(album.id) %>
        </div>
      </div>
    <% end %>
  </div>
</div>