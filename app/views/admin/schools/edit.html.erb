<h3 class="mt-3 ms-5">Edita Esta Informacion</h3>

<%= form_with(model: [:admin, @admin_school]) do |form| %>
  

  <div class="border border-danger rounded mx-5 py-5 px-5">

    <div class="mb-3">
      <b><%= form.label "Descripcion:", class: "form-label" %></b><br />
      <%= form.text_area :description, size: "100x4", class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Bio Jose:", class: "form-label" %></b><br />
      <%= form.text_field :bio_jose, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Bio Cristina:", class: "form-label" %></b><br />
      <%= form.text_field :bio_cris, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Telefono:", class: "form-label" %></b><br />
      <%= form.text_field :phone, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Whatsapp:", class: "form-label" %></b><br />
      <%= form.text_field :whatsapp, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Facebook:", class: "form-label" %></b><br />
      <%= form.text_field :facebook, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Instagram:", class: "form-label" %></b><br />
      <%= form.text_field :instagram, class: "form-control form-control-sm" %>
    </div>

    <div class="mb-3">
      <b><%= form.label "Sitio web:", class: "form-label" %></b><br />
      <%= form.text_field :webpage, class: "form-control form-control-sm" %>
    </div>

    <div class="d-flex flex-row justify-content-end mt-3">
      <%= form.submit "Edita esta Informacion", class: 'btn btn-outline-primary py-0' %>
    </div>
  </div>
<% end %>

<br>

<div class="d-flex flex-row mb-3 ms-5">
  <%= link_to "A Pagina Raiz", admin_root_path %>
</div>