<p style="color: green" class="ms-5"><%= notice %></p>

<div class="border border-danger rounded my-3 mx-5 py-5 px-5">

  <div>
    <div class="d-flex flex-column align-items-center mb-3">
      <p class="mb-3">
        <strong><%= @admin_activity.title %></strong>
      </p>
      <div>
        <%= @admin_activity.images.any? ? image_tag(@admin_activity.images.first, height: 150, width: 150) : image_tag("https://via.placeholder.com/150")%>
      </div>
    </div>

    <p>
      <%= truncate @admin_activity.description, length: 200 %>
    </p>

    <p>
      <strong>Fecha/Horario:</strong>
      <%= @admin_activity.time %>
    </p>

    <p>
      <strong>Lugar:</strong>
      <%= @admin_activity.place %>
    </p>

  </div>

  <div class="d-flex flex-row justify-content-end mb-3">
    <%= button_to "Elimina esta Actividad", admin_activity_path(@admin_activity.id), method: :delete, class: 'btn btn-outline-danger py-0' %>
  </div>

  <div class="d-flex flex-row mb-3">
    <%= link_to "Edita esta Actividad", edit_admin_activity_path(@admin_activity), class: 'me-3' %> |
    <%= link_to "Listado de Actividades", admin_activities_path, class: 'ms-3' %>
  </div>
   
</div>
