<div class="mt-3 mx-5">
  <h3>Galerias</h3>
</div>

<div class="my-5 mx-5">
  <div class="d-flex flex-wrap justify-content-between" >
    <% @albums.each do |album| %>
      <div class="album-container border border-danger rounded mt-3 me-3 py-4 px-3">
          <div class="d-flex flex-row justify-content-end">
            <%= link_to ">>", album_path(album.id), class: "link-style" %>
          </div>
          <div>
            <h6 class="mt-3"><%= album.topic %></h6>
          </div>
          <div class="my-3 mx-2">
            <small><%= truncate album.description, lenght: 100 %></small>
          </div>
      </div>
    <% end %>
  </div>
</div>