<div class="border border-danger rounded my-3 mx-5 py-5 px-5">

  <div class="d-flex flex-column align-items-center mb-3">
    <p class="row mb-3">
      <strong><%= @article.title %></strong>
    </p>
    <div class="row">
      <%= @article.images.any? ? image_tag(@article.images.first, height: 150) : image_tag("https://via.placeholder.com/150")%>
    </div>
  </div>

  <p>
    <%= @article.text %>
  </p>

</div>

<div class="mt-3 ms-5">
  <%= link_to "Listado de Publicaciones", articles_path %>
</div>
