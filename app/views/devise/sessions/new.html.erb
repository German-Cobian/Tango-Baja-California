<div class="border border-dark rounded mt-5 me-5 py-3 px-5">

  <h3 class="mb-3">Log in</h3>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="field mb-3">
      <%= f.label :email, class: "form-label" %><br />
      <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control form-control-sm" %>
    </div>

    <div class="field mb-3">
      <%= f.label :password, class: "form-label" %><br />
      <%= f.password_field :password, autocomplete: "current-password", class: "form-control form-control-sm" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions d-flex flex-row justify-content-end">
      <%= f.submit "Log in", class: 'btn btn-outline-primary py-0' %>
    </div>
  <% end %>

</div>

<div class="mt-3">
  <%= render "devise/shared/links" %>
</div>
