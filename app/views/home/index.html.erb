<h2 class="text-danger mt-3 mb-3">Tango Baja California</h2>

<% @schools.each do |school| %>
  <div class="d-flex flex-wrap">
    <div class="about mb-5 me-5">
      <%= school.description %>
    </div>

    <video height="500" width="600" controls>
      <source src="<%= asset_path('tango-video.mp4') %>" type="video/mp4">
      Your browser does not support the video tag.
    </video>
  </div>

  <div class="d-flex flex-wrap mt-5">
    <div class="bio mb-5 me-5">
      <p class="text-danger">Jose Vega</p>
      <%= school.bio_jose %>
    </div>
    <div class="bio">
      <p class="text-danger">Cristina Michaus Martinez<p>
      <%= school.bio_cris %>
    </div>
  </div>

  <div class="d-flex flex-row justify-content-end my-5 me-5">
    <div class="d-flex flex-wrap me-3">
      <%= image_tag "phone.png", height: "20", width: "20", class: 'rounded me-2', alt: "Telephone" %>
      <p class="txt-phone text-white"><small><%= school.phone %></small><p>
    </div>
    <div class="d-flex flex-row justify-content-end">
      <small><%= link_to "*", new_admin_session_path, class: "text-danger link-style" %></small>
    </div>
  </div>

<% end %>
