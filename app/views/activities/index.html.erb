<div class="mt-3 mx-5">
  <h3>Actividades</h3>
</div>

<div class="my-5 mx-5">

  <% @activities.group_by(&:category).each do |category, activities| %>
    <% if category == 'Clase' %>
      <h4 class="ms-5">Clases</h4>
      <ul class="d-flex flex-wrap">
        <% activities.each do |activity| %>
          <% if activity.category == 'Clase' %>
            <li class="activity-container d-flex flex-column border border-danger rounded my-2 mx-2 py-3 px-5">
              <p class="d-flex flex-row justify-content-end">
                <%= link_to ">>", activity_path(activity.id), class: "link-style" %>
              </p>
              <%= render activity %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% elsif category == 'Taller' %>
      <h4 class="mt-5 ms-5">Talleres</h4>
      <ul class="d-flex flex-wrap">
        <% activities.each do |activity| %>
          <% if activity.category == 'Taller' %>
            <li class="activity-container d-flex flex-column border border-danger rounded my-2 mx-2 py-3 px-5">
              <p class="d-flex flex-row justify-content-end">
                <%= link_to ">>", activity_path(activity.id), class: "link-style" %>
              </p>
              <%= render activity %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% elsif category == 'Seminario' %>
      <h4 class="mt-5 ms-5">Seminarios</h4>
      <ul class="d-flex flex-wrap">
        <% activities.each do |activity| %>
          <% if activity.category == 'Seminario' %>
            <li class="activity-container d-flex flex-column border border-danger rounded my-2 mx-2 py-3 px-5">
              <p class="d-flex flex-row justify-content-end">
                <%= link_to ">>", activity_path(activity.id), class: "link-style" %>
              </p>
              <%= render activity %>
            </li>
          <% end %>
        <% end %>
      </ul>
    <% end %>
  <% end %>

</div>
