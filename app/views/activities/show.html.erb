<p style="color: green" class="ms-5"><%= notice %></p>

<div class="border border-dark rounded my-3 mx-5 py-5 px-5">
  

  <div class="d-flex flex-column align-items-center mb-3">
    <p class="row mb-3">
      <strong><%= @activity.title %></strong>
    </p>
    <div class="row">
      <%= @activity.images.any? ? image_tag(@activity.images.first, height: 150) : image_tag("https://via.placeholder.com/150")%>
    </div>
  </div>

  <p>
    <%= @activity.description %>
  </p>

  <div class="d-flex flex-row">
    <%= image_tag "calendar.png", height:"20", width: "20", class: "mt-1 me-3" %>
    <p><%= @activity.time %></p>
  </div>

  <div class="d-flex flex-row">
    <%= image_tag "location.png", height:"20", width: "20", class: "mt-1 me-3" %>
    <p><%= @activity.place %></p>
  </div>

</div>

<div class="mt-3 ms-5">
    <%= link_to "Listado de Actividades", activities_path %>
</div>