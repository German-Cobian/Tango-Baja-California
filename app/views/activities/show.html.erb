<div class="border border-danger rounded my-3 mx-5 py-3 px-5">

  <div>
    <%= link_to "<<", activities_path, class: "link-style" %>
  </div>
  
  <div class="d-flex flex-column align-items-center mb-3">
    <p class="row mb-3">
      <strong><%= @activity.title %></strong>
    </p>
    <div class="row">
      <% if @activity.images.any? %>
          <div class="d-flex flex-wrap mb-3">
            <% @activity.images.each do |image| %>
              <%= image_tag(image, height: 150, class: "rounded me-2 mb-2") %>
            <% end %>
          </div>
        <% end %>
    </div>
  </div>

  <p>
    <%= @activity.description %>
  </p>

  <div class="d-flex flex-row">
    <%= image_tag "calendar.png", height:"20", width: "20", class: "mt-1 me-3" %>
    <p><%= @activity.time %></p>
  </div>

  <div class="d-flex flex-row">
    <%= image_tag "location.png", height:"20", width: "20", class: "mt-1 me-3" %>
    <p><%= @activity.place %></p>
  </div>

</div>

