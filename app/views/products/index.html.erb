<h3 class="mt-3 ms-5">Productos</h3>

<% @products.each do |product| %>
  <div data-controller="products" data-products-product-value="<%= product.to_json %>" class="">
    <div class="">
      <div class="d-flex flex-column align-items-center border border-danger rounded mb-3 mx-5 py-4 px-3">
        <div class="mb-3">
          <h3 class=""><%= product.name %></h3>
        
          <% product.images.each do |image| %>
            <%= image_tag image, height: 200, width: 200, class: "rounded" %>
          <% end %>
        </div>
        <div>
          <p class=""><%= product.description %></p>
          <p class="">$<%= (product.price/100.0).to_s %>
        </div>
        <button data-action="click->products#addToCart" class="btn btn-outline-primary py-0">Add To Cart</button>
      </div>
    </div>
  </div>
<% end %>