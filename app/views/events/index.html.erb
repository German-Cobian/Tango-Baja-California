<div class="mt-3 mx-5">
  <h3>Eventos</h3>
</div>

<div class="calends border border-danger rounded text-center my-5">
  <h3 class="mt-3">Calendario de Eventos</h3>
  <%= month_calendar(events: @events) do |date, events| %>
    <div class="day">
      <%= date.day %>
    </div>
    <% events.each do |event| %>
      <div class="card-header">
        <div class="card-title">
          <small><%= link_to event.title, event_path(event.id) %></small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
