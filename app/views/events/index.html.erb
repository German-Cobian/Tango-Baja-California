<div class="mt-3 mx-5">
  <h3>Eventos</h3>
</div>

<div class="calends border border-danger rounded text-center my-5">
  <h3 class="mt-3">Calendario de Eventos</h3>
  <%= month_calendar(events: @events) do |date, events| %>
    <div class="day">
      <%= date.day %>
    </div>
    <% events.each do |event| %>
      <div class="card-header">
        <div class="card-title">
          <small><%= link_to event.title, event_path(event.id) %></small>
        </div>
      </div>
    <% end %>
  <% end %>
</div>

<div class="d-flex flex-wrap mx-5">
  <% @events.each do |event| %>
    <div class="event-container border border-danger rounded my-2 mx-2 py-3 px-5">
      <div class="d-flex flex-row justify-content-end">
        <%= link_to ">>", event_path(event.id), class: 'link-style' %>
      </div>
      <%= render event %>  
    </div>
  <% end %>
</div>