<div class="border border-dark rounded mt-3 mx-5">
  <div class="my-5 mx-5">
    <div class="d-flex flex-column justify-content-start mb-5">

      <div class="d-flex flex-column align-items-center mb-5">
        <div class="row">
          <% if @medium.image.attached? %>
            <%= image_tag @medium.image, height: 200, width: 200, class: ""  %>
          <% end %>
        </div>
        <div class="row">
          <% if @medium.file.attached? %>
            <% if @medium.file.video? %>
              <%= video_tag url_for(@medium.file), controls: "" %>
            <% elsif @medium.file.previewable? %>
              <div style="height:300px;width:300px">
                <%= image_tag @medium.image.preview(resize_to_fit: [300,300]) %>
              </div>
            <% end %>
          <% end %>
        </div>
      </div>

      <div class="d-flex flex-row justify-content-center">
        <p><strong><%= @medium.title %></strong></p>
      </div>
      <div class="d-flex flex-row justify-content-center">
        <%= @medium.description %>
      </div>
    </div>

  </div>
</div>

<div class="mt-3 ms-5">
  <%= link_to "Listado de Albumes", albums_path %>
</div>